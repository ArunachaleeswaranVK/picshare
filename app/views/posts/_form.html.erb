<div class="container">
<div class="row">
  

<%= form_tag posts_path,:html => {:class => "form-horizontal center"} , enctype: 'multipart/form-data' do %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= label_tag 'title', 'Title'%>
    <%= text_field_tag :title , nil,  minlength: 4 ,maxlength: 20 ,required: true, class: 'form-control', autofocus: true %>
  </div>
  <div class="form-group">
    <%= label_tag 'tag_list', 'Tags (seperated by commas)'%>
    <%= text_field_tag :tag_list , nil , required: true ,class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag 'file', 'File'%>
    <%= file_field_tag :file, required: true ,class: 'form-control' %>
  </div>


  <%= submit_tag "Submit", class: "btn btn-default btn-primary" %> 
<% end %>

</div>
<p><%= link_to 'Go Back', :back %></p>
</div>

<br></br>
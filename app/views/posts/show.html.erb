<p id="notice"><%= notice %></p>



<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<div class="row">
	<div class="col-md-6">	
		
		<%= image_tag @post.url,  :size => '260x180' %>
		<p><%= link_to @post.image_name, @post.url %></p>
	</div>
		
</div>
<div>
  <%= link_to current_user.user_name , profile_path(current_user) %>
</div>
<div>
  <%= div_for @post do %>
     <%= render partial: "button", locals: { post: @post } %>
  <% end %>
</div> 

<div>
  <!--add recommendation-->
</div>  
  
  
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>



<div class="comments" id="comments_<%= @post.id %>">
          <% if @post.comments %>
            <%= render @post.comments, post: @post %>
          <% end %>
</div>


<div class="comment-form col-sm-11">
        <%= form_for [@post, @post.comments.build] , remote: true do |f| %>
          <%= f.text_field :content, placeholder: 'Add a comment...', class: "comment_content", id: "comment_content_#{@post.id}" %>
        <% end %>
</div>


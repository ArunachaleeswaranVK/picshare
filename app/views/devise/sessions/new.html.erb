

<div class="container">
    <div class="row">
        <div class="col-md-12">

            <div class="wrap">
                <p class="form-title">Sign In</p>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name) ,:html => {:class => 'login'}) do |f| %>
                <div class="field">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true %>
                </div>
              
                <div class="field">
                  <%= f.label :password %><br />
                  <%= f.password_field :password, autocomplete: "off" %>
                </div>
                
                <div class="actions">
                  <%= f.submit "Log in" , class: "btn btn-success btn-sm" %>
                </div>
                <% if devise_mapping.rememberable? -%>
                <div class="remember-forgot">
                    <div class="row">
                        <div class="col-md-6">
                           <%= f.check_box :remember_me %>
                           <%= f.label :remember_me %>
                        </div>
                        <div class="col-md-6 forgot-pass-content">
                           New here ? <%= link_to "sign up" , new_user_registration_path %>
                        </div>
                    </div>
                </div>
                <% end -%>
                
              

              <% end %>
                
                
 
            
     
          </div>
        </div>
             
    </div>
</div>
